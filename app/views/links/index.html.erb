<div class="row">
  <div class="col-sm-8">
    <div class="alert alert-primary" role="alert">
      <div style="margin-right: 3px; display: inline-block">Didn't find what you were looking for? Create a new go/ link</div>
      <a href="/new" style="color: white"><div class="btn btn-light">here</div></a>
    </div>
  </div>
  <div class="col-sm-4">
    <div class="alert alert-info" role="alert" style="text-align: right">
      <div style="margin-right: 3px; display: inline-block">Learn about go/</div>
       <a href="/about" style="color: white"><div class="btn btn-light">here</div></a>
    </div>
  </div>
</div>

<br><br>
<h2>popular go/ links</h2>
<br>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Popularity</th>
      <th>Name</th>
      <th>URL</th>
    </tr>
  </thead>
  <tbody>
    <% @links.last(100).each do |link| %>
      <tr>
      	<td><%= link.hits || 0 %></td>
        <td><%= link.name %></td>
        <td><%= link.url[0..99] %></td>
      </tr>
    <% end %>
  </tbody>
</table>